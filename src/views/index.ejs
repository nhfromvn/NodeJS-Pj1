<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <h1>My app</h1>
    <ul>

        <li><a class="active" href="#home">Home</a></li>
        <li><a href="#news">News</a></li>
        <li><a href="#contact">Contact</a></li>
        <li><a href="#about">About</a></li>
    </ul>
    <h2>List data user</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td>
                        <%= dataUser[i].id %>
                    </td>
                    <td>
                        <%= dataUser[i].firstName %>
                    </td>
                    <td>
                        <%= dataUser[i].lastName %>
                    </td>
                    <td>
                        <a href="/detail/user/<%= dataUser[i].id %>"><button type="button">Detail</button></a>
                        <form action="/getPageUpdate/<%= dataUser[i].id %>" method="GET">
                            <input type="text" hidden value="<%= dataUser[i].id %>" />
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/deleteUser" method="POST">
                            <input type="text" hidden value="<%= dataUser[i].id %>" name="userId" />
                            <button type="submit">Delte</button>
                        </form>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
    <form action="/create-new-user" method="POST">
        <div class="create-user-container">
            <div>
                <h4>Create new user:</h4>
            </div>
            <div>
                <label>First Name</label>
                <input type="text" name="firstName" />
            </div>
            <div>
                <label>Last Name</label>
                <input type="text" name="lastName" />
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="email" />
            </div>
            <div>
                <label>Phone</label>
                <input type="text" name="phone" />
            </div>
            <div>
                <button class="btn-submit" type="submit">Submit</button>
            </div>
        </div>
    </form>
</body>

</html>